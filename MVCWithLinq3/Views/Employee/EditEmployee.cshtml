@model MVCWithLinq3.Models.EmpDept

@{
    ViewBag.Title = "Edit Employee";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header text-white bg-warning text-center">
            <h2>Edit Employee Details</h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post, new { @class = "needs-validation" }))
            {
                <div class="mb-3">
                    @Html.LabelFor(E => E.Eid, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(E => E.Eid, new { @class = "form-control", @disabled = "true" })
                    @Html.HiddenFor(E => E.Eid) <!-- Hidden input to retain ID -->
                </div>

                <div class="mb-3">
                    @Html.LabelFor(E => E.Ename, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(E => E.Ename, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(E => E.Job, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(E => E.Job, new { @class = "form-control", required = "required" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(E => E.Salary, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(E => E.Salary, new { @class = "form-control", required = "required", type = "number" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(E => E.Dname, new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(E => E.Did, new SelectList(Model.Departments, "Value", "Text"), "- Select Department -", new { @class = "form-select", required = "required" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a href="@Url.Action("DisplayEmployees", "Employee")" class="btn btn-danger">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>
