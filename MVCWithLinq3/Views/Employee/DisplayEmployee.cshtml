@model MVCWithLinq3.Models.EmpDept
@{
    ViewBag.Title = "Employee Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header text-white bg-success text-center">
            <h2><i class="bi bi-person-circle"></i> Employee Details</h2>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <table class="table table-bordered">
                    <tr>
                        <th><i class="bi bi-person-badge"></i> EID:</th>
                        <td>@Model.Eid</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-person"></i> Name:</th>
                        <td>@Model.Ename</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-briefcase"></i> Job:</th>
                        <td>@Model.Job</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-currency-rupee"></i> Salary:</th>
                        <td>@Model.Salary.("C", new System.Globalization.CultureInfo("en-IN"))</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-building"></i> Department:</th>
                        <td>@Model.Dname</td>
                    </tr>
                    <tr>
                        <th><i class="bi bi-geo-alt"></i> Location:</th>
                        <td>@Model.Location</td>
                    </tr>
                </table>
            }
            else
            {
                <div class="alert alert-danger text-center">
                    <i class="bi bi-exclamation-triangle"></i> Employee not found!
                </div>
            }
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("DisplayEmployees", "Employee")" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Back to Employee List
            </a>
        </div>
    </div>
</div>
