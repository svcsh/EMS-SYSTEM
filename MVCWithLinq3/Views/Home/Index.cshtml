@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<main class="container mt-5">
    <section class="row text-center" aria-labelledby="aspnetTitle">
        <h1 id="aspnetTitle">Welcome to ASP.NET MVC</h1>
        <p class="lead">
            ASP.NET is a free web framework for building great web applications using HTML, CSS, and JavaScript.
        </p>
        <p><a href="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>

    <div class="row mt-4">
        <section class="col-md-4 text-center" aria-labelledby="gettingStartedTitle">
            <h2 id="gettingStartedTitle">Getting Started</h2>
            <p>
                ASP.NET MVC provides a clean, patterns-based approach to building dynamic web applications.
            </p>
            <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
        </section>

        <section class="col-md-4 text-center" aria-labelledby="librariesTitle">
            <h2 id="librariesTitle">Get More Libraries</h2>
            <p>NuGet makes it easy to add, remove, and update libraries in Visual Studio projects.</p>
            <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
        </section>

        <section class="col-md-4 text-center" aria-labelledby="hostingTitle">
            <h2 id="hostingTitle">Web Hosting</h2>
            <p>Find the best web hosting service for your applications.</p>
            <p><a class="btn btn-outline-dark" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
        </section>
    </div>
</main>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
